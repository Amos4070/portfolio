{
  "version": 2,
  "builds": [
    {  "postinstall": "python manage.py migrate && python manage.py collectstatic --noinput",
      "src": "myproject/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_file.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/$1"
    },
  
    {
      "src": "/(.*)",
      "dest": "myproject/wsgi.py"
    }
  ]
}

